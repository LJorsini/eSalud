      <input type="search" class="form-control rounded" placeholder="Profesionales" aria-label="Search"
        aria-describedby="search-addon" />
      <button type="button" class="btn btn-primary ms-4 d-flex align-items-center justify-content-center"
        data-bs-toggle="modal" data-bs-target="#modalProfesionales"><i class="material-icons">add</i></button>
      <button type="button" class="btn btn-primary ms-4 d-flex align-items-center justify-content-center"><i
          class="material-icons">print</i></button>
    </div>

  </div>

  <div class="card-body">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Nombre</th>
          <th scope="col">DNI</th>
          <th scope="col">MP</th>
          <th scope="col">DIRECCION</th>
          <th scope="col">LOCALIDAD</th>
